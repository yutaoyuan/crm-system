{
  "name": "crm",
  "version": "1.0.59",
  "description": "客户资料管理系统",
  "main": "electron/main.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "electron": "NODE_ENV=development ELECTRON_DEV=1 electron .",
    "build": "NODE_ENV=production electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "backup-db": "node scripts/backup-db.js",
    "restore-db": "node scripts/restore-db.js",
    "verify-db": "node scripts/verify-db-files.js",
    "test-db-copy": "node scripts/test-db-copy.js",
    "test-db-init": "node scripts/test-db-init.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "connect-sqlite3": "^0.9.15",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parser": "^3.0.0",
    "dompurify": "^3.2.6",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "electron-updater": "^6.1.4"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.0.1"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "homepage": "https://github.com/yutaoyuan/crm-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/yutaoyuan/crm-system.git"
  },
  "build": {
    "appId": "com.crm.app",
    "productName": "crm",
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/bcrypt/**/*",
      "models/db.js"
    ],
    "extraResources": [
      {
        "from": "databaseFolder/",
        "to": "databaseFolder/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "databaseFolder/",
        "to": "databaseFolder/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!.github/**/*",
      "!*.md",
      "app-update.yml"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "yutaoyuan",
        "repo": "crm-system"
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "type": "development",
      "entitlements": null,
      "entitlementsInherit": null,
      "mergeASARs": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
